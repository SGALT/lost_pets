<div class="container my-4">
  <%= simple_form_for @pet do |f| %>
    <%= f.input :name, label: "Nom" %>
    <%= f.input :address %>
    <%= f.input :species, collection: Pet::SPECIES %>
    <%= f.input :found_on, html5: true %>
    <%= f.submit class: "btn btn-secondary mt-4" %>
  <% end %>
</div>
