<div class="container my-4">
  <h1>Pets index</h1>
  <ul>
    <% @pets.each do |pet| %>
      <li>
        <%= pet.name %> |
        <%= pet.species %> |
        <%= pet.address %> |
        <%= pet.found_on %> |
        <%= link_to 'see details', pet_path(pet), class: "btn btn-primary" %>
      </li>
    <% end %>
  </ul>
  <p>
    <%= link_to 'Create new pet', new_pet_path, class: "btn btn-primary" %>
  </p>
</div>
